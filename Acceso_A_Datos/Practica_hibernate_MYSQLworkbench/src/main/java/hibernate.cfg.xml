<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
		"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
		"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/investigacion</property>
    	<property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
    	
    	
         <!--<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>-->
        <property name="hibernate.connection.password">alumno</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        
        <mapping class="entidades.Investigador" package="entidades" resource="entidades.Investigador.hbm.xml" />
        <mapping class="entidades.Educacion" package="entidades" resource="entidades.Educacion.hbm.xml" />
        <mapping class="entidades.ExperienciaLaboral" package="entidades" resource="entidades.ExperienciaLaboral.hbm.xml" />
        <mapping class="entidades.TesisRedactadas" package="entidades" resource="entidades.TesisRedactadasr.hbm.xml" />
        <mapping class="entidades.TrabajosGradoDirigidos" package="entidades" resource="entidades.TrabajosGradoDirigidos.hbm.xml" />
    </session-factory>
</hibernate-configuration>	
